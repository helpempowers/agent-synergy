{
  "name": "agent-synergy",
  "version": "1.0.0",
  "description": "Plug-and-play AI agents that work like employees",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "cd backend && python start.py",
    "dev:web": "cd web-app && npm run dev",
    "dev:mobile": "cd mobile-app && npm start",
    "build": "npm run build:web",
    "build:web": "cd web-app && npm run build",
    "install:all": "npm run install:web && npm run install:mobile",
    "install:web": "cd web-app && npm install",
    "install:mobile": "cd mobile-app && npm install",
    "test": "npm run test:backend && npm run test:web",
    "test:backend": "cd backend && python -m pytest",
    "test:web": "cd web-app && npm run test",
    "lint": "npm run lint:web",
    "lint:web": "cd web-app && npm run lint",
    "clean": "npm run clean:web && npm run clean:mobile",
    "clean:web": "cd web-app && rm -rf .next node_modules",
    "clean:mobile": "cd mobile-app && rm -rf node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "web-app",
    "mobile-app"
  ],
  "keywords": [
    "ai",
    "agents",
    "automation",
    "fastapi",
    "nextjs",
    "react-native",
    "typescript"
  ],
  "author": "Agent Synergy Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/agent-synergy.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/agent-synergy/issues"
  },
  "homepage": "https://github.com/your-username/agent-synergy#readme"
}
